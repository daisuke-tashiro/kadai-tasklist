<h1>タスク一覧</h1>

<% if @tasks.any? %>

  <table class='table table-striped'>
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task%></td>
          <td><%= link_to task.status %></td>
          <td><%= link_to task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    
    <div>
      <%= paginate @tasks %>
    </div>
      <% end %>
